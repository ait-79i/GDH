<div class="gdh-rdv-progress-wrapper">
	<div
		class="gdh-rdv-progress-container">
		<!-- Progress Steps with Icons -->
		<div
			class="gdh-rdv-steps-track">
			<!-- Step 1: Créneaux -->
			<div class="gdh-rdv-step-item active" data-step="1">
				<div class="gdh-rdv-step-circle">
					<span class="gdh-rdv-step-icon dashicons dashicons-calendar-alt"></span>
					<span class="gdh-rdv-step-number">1</span>
					<div class="gdh-rdv-step-pulse"></div>
				</div>
				<div class="gdh-rdv-step-label">
					<span class="gdh-rdv-step-title">Créneaux</span>
					<span class="gdh-rdv-step-subtitle">Choisissez vos disponibilités</span>
				</div>
			</div>

			<!-- Connector Line 1-2 -->
			<div class="gdh-rdv-step-connector" data-connector="1-2">
				<div class="gdh-rdv-connector-line">
					<div class="gdh-rdv-connector-progress"></div>
				</div>
			</div>

			<!-- Step 2: Adresse -->
			<div class="gdh-rdv-step-item" data-step="2">
				<div class="gdh-rdv-step-circle">
					<span class="gdh-rdv-step-icon dashicons dashicons-location"></span>
					<span class="gdh-rdv-step-number">2</span>
					<div class="gdh-rdv-step-pulse"></div>
				</div>
				<div class="gdh-rdv-step-label">
					<span class="gdh-rdv-step-title">Adresse</span>
					<span class="gdh-rdv-step-subtitle">Lieu d'intervention</span>
				</div>
			</div>

			<!-- Connector Line 2-3 -->
			<div class="gdh-rdv-step-connector" data-connector="2-3">
				<div class="gdh-rdv-connector-line">
					<div class="gdh-rdv-connector-progress"></div>
				</div>
			</div>

			<!-- Step 3: Informations -->
			<div class="gdh-rdv-step-item" data-step="3">
				<div class="gdh-rdv-step-circle">
					<span class="gdh-rdv-step-icon dashicons dashicons-admin-users"></span>
					<span class="gdh-rdv-step-number">3</span>
					<div class="gdh-rdv-step-pulse"></div>
				</div>
				<div class="gdh-rdv-step-label">
					<span class="gdh-rdv-step-title">Informations</span>
					<span class="gdh-rdv-step-subtitle">Vos coordonnées</span>
				</div>
			</div>
		</div>
	</div>
</div>
