<style>
	.gdhrdv-meta-field {
		margin-bottom: 15px;
	}
	.gdhrdv-meta-field label {
		display: block;
		font-weight: bold;
		margin-bottom: 5px;
	}
	.gdhrdv-meta-field input[type="text"],
	.gdhrdv-meta-field input[type="email"],
	.gdhrdv-meta-field input[type="tel"],
	.gdhrdv-meta-field textarea {
		width: 100%;
		padding: 8px;
	}
	.gdhrdv-meta-field textarea {
		min-height: 80px;
		resize: vertical;
		font-family: inherit;
	}
	.gdhrdv-meta-field-group {
		display: flex;
		gap: 15px;
	}
	.gdhrdv-meta-field-group .gdhrdv-meta-field {
		flex: 1;
	}
</style>

<div class="gdhrdv-meta-field-group">
	<div class="gdhrdv-meta-field">
		<label for="gdhrdv_first_name">Prénom</label>
		<input type="text" id="gdhrdv_first_name" name="gdhrdv_first_name" value="{{ first_name }}" readonly>
	</div>
	<div class="gdhrdv-meta-field">
		<label for="gdhrdv_last_name">Nom</label>
		<input type="text" id="gdhrdv_last_name" name="gdhrdv_last_name" value="{{ last_name }}" readonly>
	</div>
</div>

<div class="gdhrdv-meta-field-group">
	<div class="gdhrdv-meta-field">
		<label for="gdhrdv_email">Email</label>
		<input type="email" id="gdhrdv_email" name="gdhrdv_email" value="{{ email }}" readonly>
	</div>
	<div class="gdhrdv-meta-field">
		<label for="gdhrdv_phone">Téléphone</label>
		<input type="tel" id="gdhrdv_phone" name="gdhrdv_phone" value="{{ phone }}" readonly>
	</div>
</div>

{% if message %}
<div class="gdhrdv-meta-field">
	<label for="gdhrdv_message">Message du client</label>
	<textarea id="gdhrdv_message" name="gdhrdv_message" readonly>{{ message }}</textarea>
</div>
{% endif %}

<div class="gdhrdv-meta-field">
	<label>
		<input type="checkbox" name="gdhrdv_accept_terms" value="1" {{ accept_terms == '1' ? 'checked' : '' }} disabled>
		Conditions générales acceptées
	</label>
</div>
