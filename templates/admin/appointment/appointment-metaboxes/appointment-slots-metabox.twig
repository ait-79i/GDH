<style>
	.gdhrdv-slots-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	.gdhrdv-slot-item {
		padding: 12px;
		margin-bottom: 10px;
		background: #f9f9f9;
		border-left: 4px solid #2271b1;
		border-radius: 4px;
	}
	.gdhrdv-slot-item strong {
		display: block;
		margin-bottom: 5px;
		color: #2271b1;
	}
	.gdhrdv-slot-times {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		margin-top: 8px;
	}
	.gdhrdv-slot-time-badge {
		display: inline-block;
		padding: 4px 10px;
		background: #2271b1;
		color: white;
		border-radius: 3px;
		font-size: 12px;
	}
	.gdhrdv-slot-all-day {
		display: inline-block;
		padding: 4px 10px;
		background: #00a32a;
		color: white;
		border-radius: 3px;
		font-size: 12px;
		font-weight: bold;
	}
</style>

{% if slots is empty %}
	<p>Aucun créneau disponible.</p>
{% else %}
	<ul class="gdhrdv-slots-list">
		{% for slot in slots %}
			<li class="gdhrdv-slot-item">
				<strong>Créneau #{{ loop.index }}</strong>
				<div>
					<span class="dashicons dashicons-calendar-alt"></span>
					Date:
					{{ slot.formatted_date }}
				</div>
				<div class="gdhrdv-slot-times">
					{% if slot.is_all_day %}
						<span class="gdhrdv-slot-all-day">Toute la journée</span>
					{% else %}
						{% for time in slot.times %}
							<span class="gdhrdv-slot-time-badge">{{ time }}</span>
						{% endfor %}
					{% endif %}
				</div>
			</li>
		{% endfor %}
	</ul>
{% endif %}
